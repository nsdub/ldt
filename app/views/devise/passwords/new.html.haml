%h1 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  .field
    = f.email_field :email, :placeholder => "Email", :type => "text", :class => "form-control"
  %div
    %input{ name: "commit", type: "submit", value: "Send password reset instructions", class: "btn btn-primary"}
= render "devise/shared/links"