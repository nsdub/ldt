%h1 Listing ideas
%table
  %thead
    %tr
      %th Creator
      %th Title
      %th Video url
      %th
      %th
      %th
  %tbody
    - @ideas.each do |idea|
      %tr
        %td= idea.creator_id
        %td= idea.title
        %td= idea.video_url
        %td= link_to 'Show', idea
        %td= link_to 'Edit', edit_idea_path(idea)
        %td= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }
        - if idea.published_at.nil?
          %td= link_to 'Publish', publish_idea_path(idea), data: { confirm: 'Are you sure you want to Publish?' }
        - else
          %td= link_to 'Unpublish', unpublish_idea_path(idea), data: { confirm: 'Are you sure you want to Unpublish?' }
%br/
= link_to 'New Idea', new_idea_path